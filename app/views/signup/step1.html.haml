= form_for @user, url: step2_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.text_field :name, placeholder: '例) メルカリ太郎'
  = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
  = f.password_field :password, placeholder: 'パスワード6文字以上'
  = f.password_field :password_confirmation, placeholder: 'パスワード確認'
  = f.text_field :family_name, placeholder:"姓"
  = f.text_field :first_name, placeholder:"名"
  = f.text_field :family_kana, placeholder:"セイ"
  = f.text_field :first_kana, placeholder:"メイ"
  = f.submit