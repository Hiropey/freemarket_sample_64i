      = link_to "フリマケ", root_path
      %i.fas.fa-angle-right
    - if current_page?(user_path(current_user.id))
      %span.last-pankz マイページ
    - else
      = link_to user_path(current_user.id) do
        %span マイページ
      %i.fas.fa-angle-right
      -# - if current_page?()
    - if current_page?(logout_user_path(current_user.id))
      %span.last-pankz ログアウト