= render 'toppage/header'
= render "toppage/button"
= render "user_pankz"


.user-main
  = render "side"
  .page-pass
    .page-pass__box
      %h2 メール/パスワード
    .page-pass__form__contents
      .form-group
        %label メールアドレス
        %input.input-default{:name => "e-mail", :placeholder => "PC・携帯どちらでも可", :type => "e-mail", :value => ""}/
        %p メールアドレスを変更すると確認メールが送信されます。メール内のURLをクリックすると変更完了です。
      .form-group
        %label 現在のパスワード
        %input.input-default{:name => "current-password", :placeholder => "", :type => "password", :value => ""}/        
      .form-group
        %label 新しいパスワード
        %input.input-default{:name => "password", :placeholder => "7文字以上の半角英数字", :type => "password", :value => ""}/
        %p※ 英字と数字の両方を含めて設定してください
      .form-group
        %label 新しいパスワード確認
        %input.input-default{:name => "password-confirmation", :placeholder => "新しいパスワードを再入力", :type => "password", :value => ""}/ 
        %button.btn-red{:type => "submit"} 変更する


= render 'toppage/footer'